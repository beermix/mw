_pkgname=rust
_date=2020-06-04
_rustc=1.44.0
_cargo=0.45.0

_realname=rust
_bootstrapping=yes
pkgbase=mingw-w64-${_realname}
pkgname="${MINGW_PACKAGE_PREFIX}-${_realname}"
pkgver=1.45.1
pkgrel=1
pkgdesc="Systems programming language focused on safety, speed and concurrency (mingw-w64)"
arch=('x86_64')
url="https://www.rust-lang.org/ru/"
license=('MIT' 'Apache')
depends=("${MINGW_PACKAGE_PREFIX}-gcc")
makedepends=("bison"
             "flex"
             "git"
             "${MINGW_PACKAGE_PREFIX}-cmake>=3.4.3"
             "${MINGW_PACKAGE_PREFIX}-curl"
             "${MINGW_PACKAGE_PREFIX}-libffi"
             "${MINGW_PACKAGE_PREFIX}-lldb"
             "${MINGW_PACKAGE_PREFIX}-llvm"
             "${MINGW_PACKAGE_PREFIX}-ninja"
             "${MINGW_PACKAGE_PREFIX}-openssl"
             "${MINGW_PACKAGE_PREFIX}-python2"
             "${MINGW_PACKAGE_PREFIX}-libgit2"
             "${MINGW_PACKAGE_PREFIX}-zlib")
options=('!strip' 'staticlibs' '!buildflags')
source=("https://static.rust-lang.org/dist/rustc-${pkgver}-src.tar.xz"
        "https://static.rust-lang.org/dist/${_date}/rust-std-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
        "https://static.rust-lang.org/dist/${_date}/rustc-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
        "https://static.rust-lang.org/dist/${_date}/rust-mingw-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
        "https://static.rust-lang.org/dist/${_date}/cargo-${_cargo}-x86_64-pc-windows-gnu.tar.gz"
        "mingw-config.toml"
        "force-curl-rust.patch"
        "0001-add-missing-libs.patch"
        "0002-fix-install-msys2.patch"
        "0004-unbundle-gcc.patch"
        "0005-win32-config.patch")
noextract=("rust-std-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
           "rustc-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
           "rust-mingw-${_rustc}-x86_64-pc-windows-gnu.tar.gz"
           "cargo-${_cargo}-x86_64-pc-windows-gnu.tar.gz"
           "rustc-${pkgver}-src.tar.xz")
sha256sums=('c436034db42bc0ea7e7f32816ac6555b70d1f76c834407597966dfaf2ec839d6'
            'SKIP'
            '122b2a909fc185c6ae5a0110af6f60699f4332b4fb3c43698b14a873fbe65b6e'
            'SKIP'
            'fe1d8d81950eea1f67219abc49bc1ae88b2b27fd02d1bffa38b43bc5bff05124'
            'SKIP'
            '4ee5811bfb5fd0eb26fcf7f9b57f4e8fced458219ba52bff6d2474321ff39c18'
            'SKIP'
            'bed4a7d3d39ef1c996f4abb4199e2e65b5912c48d04ae73c036eea6698951d8c')
validpgpkeys=('108F66205EAEB0AAA8DD5E1C85AB96E6FA1BE5FE') # Rust Language (Tag and Release Signing Key) <rust-key@rust-lang.org>

prepare() {
  tar -xJf ${srcdir}/rustc-${pkgver}-src.tar.xz -C ${srcdir} || true
  cd "rustc-${pkgver}-src"

  patch -p1 -i "${srcdir}/force-curl-rust.patch"
  patch -p1 -i "${srcdir}/0001-add-missing-libs.patch"
  patch -p1 -i "${srcdir}/0002-fix-install-msys2.patch"
  patch -p1 -i "${srcdir}/0004-unbundle-gcc.patch"
  patch -p1 -i "${srcdir}/0005-win32-config.patch"

  cp "${srcdir}"/mingw-config.toml config.toml
  sed -i "s|\@PREFIX\@|${MINGW_PREFIX}|" config.toml
  # use level 0 to speed up xz packaging
  sed -i 's|.preset(6)|.preset(0)|' "src/tools/rust-installer/src/tarballer.rs"
  sed -i /LD_LIBRARY_PATH/d "src/bootstrap/bootstrap.py"

  cd "${srcdir}"
  mkdir -p "${srcdir}/rustc-${pkgver}-src/build/cache/${_date}"
  cp rust-std-${_rustc}-x86_64-pc-windows-gnu.tar.gz "rustc-${pkgver}-src/build/cache/${_date}"
  cp rustc-${_rustc}-x86_64-pc-windows-gnu.tar.gz "rustc-${pkgver}-src/build/cache/${_date}"
  cp cargo-${_cargo}-x86_64-pc-windows-gnu.tar.gz "rustc-${pkgver}-src/build/cache/${_date}"
  cp rust-mingw-${_rustc}-x86_64-pc-windows-gnu.tar.gz "rustc-${pkgver}-src/build/cache/${_date}"
}

build() {
  cd "rustc-${pkgver}-src"

#  /home/User/.bin/noti \
#  DEP_NGHTTP_ROOT=${MINGW_PREFIX} \
#  DEP_OPENSSL_ROOT=${MINGW_PREFIX} \
#  DEP_Z_ROOT=${MINGW_PREFIX}
  
  /home/User/.bin/noti ${MINGW_PREFIX}/bin/python2 ./x.py build -j7 --verbose
}

package() {
  cd "rustc-${pkgver}-src"

#  DEP_NGHTTP_ROOT=${MINGW_PREFIX} \
#  DEP_OPENSSL_ROOT=${MINGW_PREFIX} \
#  DEP_Z_ROOT=${MINGW_PREFIX}

  DESTDIR=${pkgdir} ${MINGW_PREFIX}/bin/python2 ./x.py install --keep-stage 0 --keep-stage 1 --verbose

  rm -f ${pkgdir}${MINGW_PREFIX}/bin/libgcc*.dll
  rm -f ${pkgdir}${MINGW_PREFIX}/bin/libstd*.dll
  rm -f ${pkgdir}${MINGW_PREFIX}/bin/libwinpthread*.dll

  install -d "${pkgdir}${MINGW_PREFIX}/share/bash-completion/completions"
  mv "${pkgdir}${MINGW_PREFIX}/etc/bash_completion.d/cargo" \
     "${pkgdir}${MINGW_PREFIX}/share/bash-completion/completions/cargo"
}
