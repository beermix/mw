# Maintainer: Martell Malone <Martell Malone at g mail dot com>

_realname=ninja
pkgbase=mingw-w64-${_realname}
pkgname=("${MINGW_PACKAGE_PREFIX}-${_realname}")
pkgver=086a9b2f8833fd45f2119596f74f90b9f7e2cdf5
pkgrel=2
pkgdesc="Ninja is a small build system with a focus on speed (mingw-w64)"
arch=('any')
url="https://github.com/ninja-build/ninja"
license=('Apache')
depends=()
options=('strip' '!staticlibs')
makedepends=("re2c" "${MINGW_PACKAGE_PREFIX}-python3" "${MINGW_PACKAGE_PREFIX}-cmake")
source=("${pkgver}.tar.gz"::"https://github.com/ninja-build/ninja/archive/${pkgver}.tar.gz"
	"color.patch")
prepare () {
  cd ${srcdir}/ninja-${pkgver}
  patch -p1 -i "${srcdir}"/color.patch

  ${MINGW_PREFIX}/bin/cmake \
      -G'MSYS Makefiles' \
      -DCMAKE_INSTALL_PREFIX=${MINGW_PREFIX} \
      -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_CXX_COMPILER=clang++ \
      -DCMAKE_C_COMPILER=clang \
      -DCMAKE_C_FLAGS_RELEASE="-march=haswell -O2 -DNDEBUG" \
      -DCMAKE_CXX_FLAGS_RELEASE="-march=haswell -O2 -DNDEBUG" \
      -DCMAKE_VERBOSE_MAKEFILE=ON \
      ../${_realname}-${pkgver}

  make -j1
}

package() {
  cd ${srcdir}/${_realname}-${pkgver}
  mkdir -p "${pkgdir}${MINGW_PREFIX}"/bin/
  mv ninja.exe "${pkgdir}${MINGW_PREFIX}"/bin/
}